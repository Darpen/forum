<hr>
{% if messages|length >=1 %}
    {% for message in messages %}
        {% if message.active %}
            <div class="d-flex align-items-center">
                <div class="circle p-3">
                    <button>
                        <img src="{{ asset('images/icons/thumbs-up.svg') }}">
                    </button>
                    {{ message.vote.up }}
                    <button>
                        <img src="{{ asset('images/icons/thumbs-down.svg') }}">
                    </button>
                    {{ message.vote.down }}
                </div>
                <div>
                    <div class="d-flex justify-content-between">
                        <span class="text-small">Ajouté le {{ message.createdAt|date('d/m/Y H:i')|replace({' ': ' à ', ':':'h'}) }} par {{ message.user.username }}</span>
                        {% if is_granted('ROLE_ADMIN') %}
                            {% include "message/delete.html.twig" %}
                        {% endif %}
                    </div>
                    <p>{{ message.content }}</p>
                </div>
            </div>
        {% endif %}
    {% endfor %}
{% else %}
    <p>Aucun message n'a été ajouté à ce sujet</p>
{% endif %}
<hr>