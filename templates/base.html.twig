<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Metal World - {% block title %}Le forum sur la guitare{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <link rel="icon" type="image/png" href="{{ asset('favicon/guitare.png') }}">

        <link rel="stylesheet"  href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
        <link rel="stylesheet"  href="{{ asset('assets/css/app.css') }}" />

        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <main>
            {% include 'navbar.html.twig' %}
            {% if app.request.attributes.get('_route') == 'app_home' %}
                <div class="wrapper bg-guitar"></div>
            {% endif %}
            <div class="container pt-2 p-3">
                {% block body %}{% endblock %}
            </div>
        </main>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
        <script src="{{ asset('assets/js/app.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>